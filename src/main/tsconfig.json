{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../build",
    "allowJs": true,
    "noImplicitAny": false,
    "rootDir": ".."
  },
  "include": ["**/*"],
  "exclude": ["static"]
}
